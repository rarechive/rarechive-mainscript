local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local Window = Fluent:CreateWindow({
    Title = "My Hack Hub",
    SubTitle = "by rarechive",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark",
    Acrylic = true,
    MinimizeKey = Enum.KeyCode.RightControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Hacks", Icon = "home" })
}

local Section = Tabs.Main:AddSection("Controls")

Section:AddButton({
    Title = "Test Hack",
    Description = "Chạy thử",
    Callback = function()
        Fluent:Notify({
            Title = "Test",
            Content = "Hack activated!",
            Duration = 3
        })
    end
})

Section:AddToggle({
    Title = "Toggle Hack",
    Description = "Bật/tắt hack thử nghiệm",
    Default = false,
    Callback = function(value)
        Fluent:Notify({
            Title = "Toggle Status",
            Content = value and "Toggle ON" or "Toggle OFF",
            Duration = 3
        })
    end
})
